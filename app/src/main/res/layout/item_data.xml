<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackgroundBorderless"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="0dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/iImgView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="5dp" />

        <TextView
            android:id="@+id/iName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/iImgView"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/iStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iName"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/iImgView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/iEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iStartDate"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/iImgView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/iLoginRequired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iEndDate"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/iImgView"
            android:textSize="17sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>